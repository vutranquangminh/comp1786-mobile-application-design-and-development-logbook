<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp">
    <TextView
        android:id="@+id/textTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!-- Add more fields as needed -->
    <TextView
        android:id="@+id/textDateStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/textTaskName"
        app:layout_constraintStart_toStartOf="parent"/>
    <!-- TextView for display status of task -->
    <TextView
        android:id="@+id/txtDisplayStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/labelStatus"
        app:layout_constraintBottom_toBottomOf="@id/textTaskName" />
    <TextView
        android:id="@+id/labelStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/textTaskName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescription"
        android:text="Description"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/textDateStart"
        app:layout_constraintTop_toBottomOf="@+id/textDateStart"/>
    <Button
        android:id="@+id/btnCompleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#x2713;"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>